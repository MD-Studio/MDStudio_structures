{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://liestudio/schemas/read_write_mol.json",
    "title": "input output config",
    "description": "Config to read and write a mol",
    "type": "object",
    "properties": {
	"from_file": {
	    "type": "boolean",
	    "description": "Read molecule from file",
	    "default": true
	},
        "toolkit": {
            "type": "string",
            "description": "Default cheminformatics toolkit to use",
            "default": "pybel"
        },
        "mol": {
            "type": "string",
            "description": "Moleculare file"
        },
        "input_format": {
            "type": "string",
            "description": "Structure input file format"
        },
        "output_format": {
            "type": "string",
            "description": "Structure output file format"
        },
	"workdir": {
	    "type": "string",
	    "default": "."
	}
    },
    "required": ["mol", "input_format", "output_format"]
}
