{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://mdstudio/schemas/rotate_request.json",
  "description": "Rotate a molecule using a matrix",
  "type": "object",
  "properties": {
    "rotations": {
      "type": "array",
      "descriptions": "Rotation Matrix"
    },
    "from_file": {
      "type": "boolean",
      "description": "Read molecule from file",
      "default": true
    },
    "toolkit": {
      "type": "string",
      "description": "Default cheminformatics toolkit to use",
      "default": "pybel"
    },
    "mol": {
      "type": "string",
      "description": "Moleculare file"
    },
    "input_format": {
      "type": "string",
      "description": "Structure input file format"
    },
    "workdir": {
      "type": "string",
      "default": "."
    }
  },
  "required": [
    "mol",
    "input_format",
    "rotations"
  ]
}
